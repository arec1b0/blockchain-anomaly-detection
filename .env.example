# Etherscan API Configuration
ETHERSCAN_API_KEY=your_etherscan_api_key
ETHERSCAN_ADDRESS=your_ethereum_address
ETHERSCAN_BASE_URL=https://api.etherscan.io/api

# Request Configuration
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=2

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Dask Configuration
USE_DASK=false
DASK_N_WORKERS=4
DASK_THREADS_PER_WORKER=1
DASK_MEMORY_LIMIT=auto

# Sentry Configuration
SENTRY_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Kafka Configuration
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=blockchain-transactions
KAFKA_GROUP_ID=anomaly-detection-group
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_MAX_POLL_RECORDS=500

# Redis Cache Configuration (Scalability Enhancement)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=blockchain_anomaly
DATABASE_USER=anomaly_user
DATABASE_PASSWORD=
# Optional: Override auto-constructed URL
DATABASE_URL=
# Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Model Configuration
MODEL_PATH=./models/default_model.pkl
BATCH_SIZE=100
CONTAMINATION=0.01

# Model Security Configuration (IMPORTANT: See docs/MODEL_SECURITY.md)
# Enable SHA256 checksum verification for model integrity
MODEL_VERIFY_CHECKSUM=true
# Enable HMAC signature verification for model authenticity (production recommended)
MODEL_VERIFY_SIGNATURE=false
# Secret key for HMAC signatures (store in secrets manager in production)
MODEL_SIGNATURE_KEY=
# Comma-separated list of trusted storage paths (empty = allow all)
MODEL_TRUSTED_PATHS=
# Model cache settings
MODEL_CACHE_ENABLED=true
MODEL_CACHE_TTL_HOURS=24

# Anomaly Buffer Configuration (Prevents Memory Leaks)
ANOMALY_BUFFER_MAX_SIZE=10000
ANOMALY_BUFFER_TTL_SECONDS=3600

# Distributed Kafka Consumer Configuration
KAFKA_NUM_WORKER_THREADS=4
KAFKA_MAX_QUEUE_SIZE=1000
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_MAX_POLL_INTERVAL_MS=300000
